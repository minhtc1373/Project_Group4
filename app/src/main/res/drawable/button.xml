<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" android:type="linear">

    <!-- Set màu nền-->
    <solid
        android:color="#aBCD" >

    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"

        android:color="#BCD" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="5dp"
        android:top="1dp"
        android:right="5dp"
        android:bottom="1dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="25dp" >
    </corners>

</shape>