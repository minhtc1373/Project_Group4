<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundmain"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="GUESS THE FLAG"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#ffff"
            android:textSize="40dp"
            tools:ignore="RtlCompat"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/button_start_quiz"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_below="@+id/Txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/play_button"
            android:textColor="#eee"
            android:textSize="37dp" />

        <Button
            android:id="@+id/text_view_highscore"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@+id/spinner_difficulty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Highscore:"
            android:background="@drawable/custom_button"
            android:textSize="34dp"
            android:textColor="#eee"/>

        <Button
            android:id="@+id/bnt_tutorial"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text_view_highscore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Tutorial"
            android:background="@drawable/custom_button"
            android:textSize="34dp"
            android:textColor="#eee"/>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_start_quiz"
            android:layout_below="@+id/button_start_quiz"
            android:layout_marginTop="20dp"
            android:backgroundTint="#ffffff"
            android:textColor="#eee"
            android:textSize="100dp"
            android:layout_alignLeft="@+id/button_start_quiz" />

        <Spinner
            android:id="@+id/spinner_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_start_quiz"
            android:layout_below="@+id/spinner_category"
            android:layout_marginTop="16dp"
            android:backgroundTint="#ffffff"
            android:textColor="#eee"
            android:textSize="37dp"
            android:layout_alignLeft="@+id/button_start_quiz" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>